{
   "extends": "@ifixit/tsconfig/nextjs.json",
   "compilerOptions": {
      "baseUrl": ".",
      "paths": {
         "@config/*": ["config/*"],
         "@assets/*": ["assets/*"],
         "@lib/*": ["lib/*"],
         "@helpers/*": ["helpers/*"],
         "@models/*": ["models/*"],
         "@components/*": ["components/*"],
         "@templates/*": ["templates/*"],
         "@layouts/*": ["layouts/*"],
         "@public/*": ["public/*"]
      },
      "types": ["cypress", "@testing-library/cypress"],
      "preserveSymlinks": true
   },
   "include": [
      "src",
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "@types/index.d.ts",
      "./test/jest-setup.ts"
   ],
   "exclude": ["node_modules", ".next", "out"]
}
